.app-view
	h1  font 300 16px "Avenir Bold"
	h2  font 300 18px "Avenir Bold"
	h3  font 300 20px "Avenir Bold"
	h4  font 300 24px "Avenir Bold"

.nav-holder
	position static
	height 80px
	width 100%
	min-width 320px
	position fixed
	z-index 20
	background white
	padding-top 10px
	left 0
	h5
		text-align center
		color #b70c15
		font-size 20px
	.top-row
		height 40px
		background #FFF

	.column-holder
		position fixed

.up-icon
	float right
	position fixed
	padding 20px
	font-size 25px
	cursor pointer
	opacity .6
	z-index 20
	top 0
	right 0
	color #CCC

.top-nav
	margin-left 10px
	height 30px
	padding 10px 0
	li
		a
			margin 10px
			vertical-align middle
			line-height 30px
			padding 5px
			color #555
			text-transform uppercase
			&.active
				font-family "Avenir Bold"

.inner-shadow 
    box-shadow inset 0 0 10px #000000


.content-header
	font-size 20px
	font-family "Avenir Medium"
	font-weight normal


.content-home
.content-feed
.content-items
	h3
		font-size 1.3em
		font-family "Avenir Medium"
		text-trasform uppercase
	.columns
	.panel
		p
			padding 0
			margin 0
			font-size 8px
			border 0
			margin-bottom 0
			line-height .9em
			bottom 0
			font-family "Avenir Light"
			padding-bottom 10px
			font-size 10px
			padding 5px
			&.title
				bottom 0
				font-size 9px
			&.desc
				bottom 0
			&.price 
				font-family "Avenir Light"
				bottom 0

	padding-bottom 100px

.spacer
	width 100%
	height 10px
	z-index 6
	position fixed
	margin 0
	padding 0
	opacity 0
	background-image -webkit-gradient( linear, left top, left bottom, from(rgba(0,0,0,.4)), to(rgba(255,255,255,0.0)), color-stop(1,#F0f0f0) )
	background-image -moz-linear-gradient( linear, left top, left bottom, from(rgba(0,0,0,.4)), to(rgba(255,255,255,0.0)), color-stop(1,#F0f0f0) )
	/*background-image filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#550000FF, endColorstr=#550000FF)
	background-image ms-filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#550000FF, endColorstr=#550000FF)*/
	&.top
		top 340px
		opacity 0
		left 0

	&.bottom
		background-image -webkit-gradient( linear, left top, left bottom, from( rgba(255,255,255,0.0)), to( rgba(0,0,0,.4)), color-stop(1,#F0f0f0) )
		background-image -moz-linear-gradient( linear, left top, left bottom, from(rgba(255,255,255,0.0)), to( rgba(0,0,0,.4)), color-stop(1,#F0f0f0) )
		bottom 40px
		height 10px
		opacity 1
		left 0
.menu
	position fixed
	background #f0f0f0
	margin 0px
	opacity 0
	top 90px
	box-shadow inset 0 0 10px #CCC
	z-index 5
	height 250px
	overflow hidden
	width 100%
	left 0
	padding-left 0 !important
	padding-right 0 !important
	h4
		font-style italic
		color #555
		font-size 1.2em
		line-height 3.0em
		padding 10px
	.column-holder
		display inline-block
		white-space nowrap
		clear both
		overflow hidden
		img
			min-height 260px
		&.magazine
			background #458bc6
			width 100%
			height 250px
			overflow hidden
		&.fingers
			background #000
			width 100%
			height 250px
			overflow hidden
		&.friends
			background #e6c5c0
			width 100%
			height 250px
			background none
			overflow hidden
		.column
			float left
			padding 10px 20px
			background rgba(25,25,25,0.0)
			height 250px
			width 220px
			box-shadow none
			text-align center
			transition background-color .58s ease-in-out
			&:hover
				background rgba(25,25,25,0.27)
				text-shadow 0 0 0.05em #000
			&.active
				text-shadow 0 0 0.05em #000
				background rgba(25,25,25,0.67)
				box-shadow 3px 0px 5px -4px #222
				h6
					a
						color #F0F0F0
						text-shadow 1px 1px 1px #111
				a
					color #F0F0F0
					text-shadow 1px 1px 1px #111
			h6
				padding 0 0 5px 5px
				color #555
				a
					color #555
			li
				padding 0 0 0 10px
				a
					color #555
					transition color, text-shadow  .2s ease-in-out
					&:hover
						color #FF00FF
						text-shadow 1px 1px 1px #000
	.nav-icon
		top 205px
		opacity 0
		position fixed
		cursor pointer
		font-size 30px
		transition opacity .8s ease-in-out
	.icon-chevron-left
		left 4px
	.icon-chevron-right
		right 4px
		&.active
			display block
	.column-spacer 
		width 1000px
		height 250px
		float left

footer
	min-width 320px
	width 100%
	position fixed
	bottom 0px
	padding 10px
	background #fff
	height 40px
	a
		color black

/* Responsive framework */
.grow
	transition-property width
	transition-duration 1s
	-webkit-transition-property width
	-webkit-transition-duration 1s


@media screen and (min-width: 0px) and (max-width: 320px)
	.menu
		.inner-menu 
			width 320
			.colum-holder
				height 250px
				.column
					width 320px
					text-align center
					opacity .5
					&.people 
						margin-top 100px !important
					&.feed 
						margin-top 100px !important
					&.active
						opacity 1
					h6
					ul
						text-align center
						li
							padding 0
							font-size 16px


	.top-nav-content-holder
		.min-400
		.min-640
		.min-960
			width 0
			overflow hidden
			margin 0
		.column
			width 320px
	footer
		.min-400
		.min-640
		.min-960
			width 0 !important
			overflow hidden
			margin 0 !important
			padding 0 !important


@media screen and (min-width: 321px) and (max-width: 410px)
	.menu
		.colum-holder
			height 250px
			.column
				opacity .5
				width 400px
				height 250px
				text-align center
				&.feed 
				&.people
					margin-top 100px !important
				&.active
					opacity 1
					li
						padding 0
						font-size 16px
						text-align center
	.icon-chevron-left
	.icon-chevron-right
			opacity .8
		.column
			width 320px
	footer
		.min-640
		.min-960
			width 0 !important
			overflow hidden
			margin 0 !important
			padding 0 !important

@media screen and (min-width: 401px) and (max-width: 767px)
	.menu
		.column-holder
			.column
				width 220px
				img 
					margin-top 0
					text-align left 
	.icon-chevron-left
	.icon-chevron-right
		opacity .8
	.top-nav
		.min-640
		.min-960
			width 0
			overflow hidden
			margin 0
		.column.min-320
		.column.min-640
			width 240px
	footer
		.min-640
		.min-960
			width 0 !important
			overflow hidden
			margin 0 !important
			padding 0 !important


@media screen and (min-width: 1280px) and (max-width: 2000px)
	.menu
		.column-holder
			.column
				width 240px !important
				text-align left

@media screen  and (min-width: 2000px) 
	.menu
		.column-holder
			.column
				width 260px !important
				text-align left 


.scrollable-content
	position absolute
	padding-top 80px
	overflow-y inherit
	bottom auto
	.discover
		background none
	.panel
		background none
		border none
		padding 5px
		font-size .9em